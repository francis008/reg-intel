    },
    {
      "section_id": "para_105",
      "heading": "10.  (1)  Where, upon the date of publication of this Act in the Gazette, \na statutory body has not, in respect of any of its financial years ending",
      "content": "10.  (1)  Where, upon the date of publication of this Act in the Gazette, \na statutory body has not, in respect of any of its financial years ending",
      "section_number": null,
      "subsection": null,
      "page_number": null,
      "element_type": "heading"
    },
