    {
      "section_id": "para_50",
      "heading": "1.  (1)  This  Act  may  be  cited  as  the  Jasa  Perkasa  Persekutuan \n(Remembrance Allowance) Act  2012.",
      "content": "1.  (1)  This  Act  may  be  cited  as  the  Jasa  Perkasa  Persekutuan \n(Remembrance Allowance) Act  2012.",
      "section_number": null,
      "subsection": null,
      "page_number": null,
      "element_type": "heading"
    },
    {
      "section_id": "para_51",
      "heading": "",
      "content": "(2)  This Act  is  deemed  to  have  come  into  operation  on  1  July",
      "section_number": null,
      "subsection": null,
      "page_number": null,
      "element_type": "text"
    },
    {
      "section_id": "para_52",
      "heading": "2011.",
      "content": "2011.",
