    },
    {
      "section_id": "para_105",
      "heading": "",
      "content": "(g)  dalam",
      "section_number": null,
      "subsection": null,
      "page_number": null,
      "element_type": "text"
    },
    {
      "section_id": "para_106",
      "heading": "",
      "content": "pendahuluan",
