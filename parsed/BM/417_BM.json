    },
    {
      "section_id": "para_52",
      "heading": "",
      "content": "“Pasukan” ertinya Pasukan Kadet Bersatu Malaysia yang",
      "section_number": null,
      "subsection": null,
      "page_number": null,
      "element_type": "text"
    },
    {
      "section_id": "para_53",
      "heading": "",
      "content": "ditubuhkan di bawah seksyen 3;",
      "section_number": null,
      "subsection": null,
      "page_number": null,
      "element_type": "text"
    },
    {
      "section_id": "para_54",
      "heading": "",
      "content": "“pegawai”  ertinya  seseorang  yang  dilantik  oleh  Yang  di-Pertuan",
      "section_number": null,
      "subsection": null,
      "page_number": null,
      "element_type": "text"
    },
    {
      "section_id": "para_55",
      "heading": "",
      "content": "Agong untk menjadi pegawai mengikut seksyen 7; dan",
      "section_number": null,
      "subsection": null,
      "page_number": null,
      "element_type": "text"
    },
    {
      "section_id": "para_56",
      "heading": "",
      "content": "“pegawai  kadet”  ertinya  seseorang  yang  dilantik  untuk  menjadi",
      "section_number": null,
      "subsection": null,
      "page_number": null,
      "element_type": "text"
    },
    {
      "section_id": "para_57",
      "heading": "",
      "content": "pegawai kadet mengikut seksyen 8.",
